/**app.wxss - 捷明达产品目录全局样式**/

/* 颜色变量 */
page {
  --primary-color: #1a1a2e;
  --secondary-color: #16213e;
  --accent-color: #0f3460;
  --highlight-color: #e94560;
  --text-color: #333333;
  --text-secondary: #666666;
  --text-light: #999999;
  --bg-color: #f5f5f5;
  --card-bg: #ffffff;
  --border-color: #eeeeee;

  background-color: var(--bg-color);
  color: var(--text-color);
  font-family:
    -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, "Helvetica Neue",
    Arial, sans-serif;
  font-size: 28rpx;
  line-height: 1.5;
}

/* 通用容器 */
.container {
  padding: 24rpx;
}

/* 卡片样式 */
.card {
  background-color: var(--card-bg);
  border-radius: 16rpx;
  padding: 24rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.05);
}

/* 产品卡片 */
.product-card {
  display: flex;
  background-color: var(--card-bg);
  border-radius: 16rpx;
  padding: 20rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.05);
}

.product-card .product-image {
  width: 160rpx;
  height: 160rpx;
  border-radius: 12rpx;
  background-color: var(--bg-color);
  flex-shrink: 0;
}

.product-card .product-info {
  flex: 1;
  margin-left: 20rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.product-card .product-name {
  font-size: 30rpx;
  font-weight: 500;
  color: var(--text-color);
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

.product-card .product-spec {
  font-size: 24rpx;
  color: var(--text-secondary);
  margin-top: 8rpx;
}

.product-card .product-meta {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-top: 12rpx;
}

.product-card .product-brand {
  font-size: 22rpx;
  color: var(--text-light);
  background-color: var(--bg-color);
  padding: 4rpx 12rpx;
  border-radius: 6rpx;
}

.product-card .product-price {
  font-size: 32rpx;
  font-weight: 600;
  color: var(--highlight-color);
}

/* 分类标签 */
.category-tag {
  display: inline-block;
  padding: 12rpx 24rpx;
  background-color: var(--primary-color);
  color: #ffffff;
  border-radius: 24rpx;
  font-size: 26rpx;
  margin-right: 16rpx;
  margin-bottom: 16rpx;
}

.category-tag.active {
  background-color: var(--highlight-color);
}

/* 搜索框 */
.search-bar {
  display: flex;
  align-items: center;
  background-color: var(--card-bg);
  border-radius: 40rpx;
  padding: 16rpx 24rpx;
  margin-bottom: 24rpx;
}

.search-bar .search-icon {
  width: 36rpx;
  height: 36rpx;
  margin-right: 16rpx;
}

.search-bar input {
  flex: 1;
  font-size: 28rpx;
}

/* 加载状态 */
.loading {
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 40rpx;
  color: var(--text-light);
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 80rpx;
  color: var(--text-light);
}

.empty-state .empty-icon {
  width: 120rpx;
  height: 120rpx;
  margin-bottom: 24rpx;
}

.empty-state .empty-text {
  font-size: 28rpx;
}

/* 按钮样式 */
.btn-primary {
  background-color: var(--primary-color);
  color: #ffffff;
  border-radius: 40rpx;
  padding: 20rpx 40rpx;
  font-size: 28rpx;
  text-align: center;
}

.btn-primary:active {
  opacity: 0.8;
}

/* 分割线 */
.divider {
  height: 1rpx;
  background-color: var(--border-color);
  margin: 24rpx 0;
}

/* 徽章 */
.badge {
  display: inline-block;
  padding: 4rpx 12rpx;
  background-color: var(--highlight-color);
  color: #ffffff;
  border-radius: 20rpx;
  font-size: 20rpx;
}

/* 网格布局 */
.grid {
  display: flex;
  flex-wrap: wrap;
  margin: -10rpx;
}

.grid-item {
  width: 50%;
  padding: 10rpx;
  box-sizing: border-box;
}

/* 列表项 */
.list-item {
  display: flex;
  align-items: center;
  padding: 24rpx;
  background-color: var(--card-bg);
  border-bottom: 1rpx solid var(--border-color);
}

.list-item:last-child {
  border-bottom: none;
}

.list-item .arrow {
  width: 24rpx;
  height: 24rpx;
  margin-left: auto;
  opacity: 0.3;
}
