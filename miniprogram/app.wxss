/* 全局样式 */
page {
  background-color: #f7f7f8;
  font-family: -apple-system-font, Helvetica Neue, Helvetica, sans-serif;
  color: #222;
}

/* 主色调变量 */
.accent-color {
  color: #ff6b6b;
}

.accent-bg {
  background-color: #ff6b6b;
}

.muted-color {
  color: #888;
}

/* 通用布局 */
.container {
  padding: 16rpx;
}

.flex-row {
  display: flex;
  flex-direction: row;
  align-items: center;
}

.flex-column {
  display: flex;
  flex-direction: column;
}

.flex-center {
  display: flex;
  align-items: center;
  justify-content: center;
}

.flex-between {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.flex-1 {
  flex: 1;
}

/* 卡片样式 */
.card {
  background: #fff;
  border-radius: 24rpx;
  padding: 16rpx;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.08);
  margin-bottom: 16rpx;
}

.card-hover {
  box-shadow: 0 16rpx 48rpx rgba(0, 0, 0, 0.12);
  transform: translateY(-2rpx);
}

/* 产品卡片 */
.product-card {
  background: #fff;
  border-radius: 24rpx;
  padding: 16rpx;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.08);
  margin-bottom: 16rpx;
}

.product-image {
  width: 100%;
  height: 220rpx;
  border-radius: 16rpx;
  background: linear-gradient(180deg, #eee, #ddd);
}

.product-name {
  font-size: 28rpx;
  font-weight: 600;
  line-height: 1.2;
  margin-top: 16rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.product-brand {
  font-size: 24rpx;
  color: #888;
  margin-top: 8rpx;
}

.product-spec {
  font-size: 24rpx;
  color: #888;
  margin-top: 4rpx;
}

.product-price {
  font-size: 32rpx;
  font-weight: 700;
  color: #ff6b6b;
  margin-top: 12rpx;
}

/* 按钮样式 */
.btn {
  border-radius: 16rpx;
  font-weight: 600;
  font-size: 28rpx;
  padding: 12rpx 24rpx;
  text-align: center;
}

.btn-primary {
  background-color: #ff6b6b;
  color: #fff;
}

.btn-block {
  width: 100%;
  box-sizing: border-box;
  margin-top: 16rpx;
}

/* 搜索框 */
.search-box {
  background: #fff;
  border-radius: 16rpx;
  padding: 16rpx;
  margin-bottom: 16rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
}

.search-input {
  width: 100%;
  padding: 12rpx 16rpx;
  border: 1rpx solid #eee;
  border-radius: 12rpx;
  font-size: 28rpx;
  box-sizing: border-box;
}

/* 分类样式 */
.category-item {
  background: #fff;
  border-radius: 16rpx;
  padding: 24rpx 16rpx;
  margin-bottom: 12rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
}

.category-item.active {
  background: linear-gradient(90deg, rgba(255, 107, 107, 0.06), transparent);
  border-left: 6rpx solid #ff6b6b;
}

.category-name {
  font-size: 32rpx;
  font-weight: 600;
}

.category-count {
  font-size: 24rpx;
  color: #888;
  background: #eee;
  padding: 8rpx 16rpx;
  border-radius: 24rpx;
  margin-left: auto;
}

/* Banner样式 */
.category-banner {
  width: 100%;
  height: 180rpx;
  border-radius: 24rpx;
  background: linear-gradient(135deg, #6ea2ff 0%, #46d9a6 100%);
  margin-bottom: 32rpx;
  position: relative;
  overflow: hidden;
}

.banner-title {
  position: absolute;
  left: 32rpx;
  top: 24rpx;
  color: #fff;
  font-size: 36rpx;
  font-weight: 700;
  text-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.35);
}

/* 空状态 */
.empty-state {
  padding: 60rpx;
  text-align: center;
  color: #888;
  font-size: 28rpx;
}

/* 加载状态 */
.loading-state {
  padding: 60rpx;
  text-align: center;
  color: #888;
  font-size: 28rpx;
}

/* 网格布局 */
.product-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 16rpx;
  padding: 16rpx;
}

@media (max-width: 600rpx) {
  .product-grid {
    grid-template-columns: 1fr;
  }
}

/* 分类导航 */
.category-nav {
  background: #fff;
  border-bottom: 1rpx solid #eee;
  padding: 16rpx 0;
}

.category-scroll {
  white-space: nowrap;
  padding: 0 16rpx;
}

.category-tab {
  display: inline-block;
  padding: 16rpx 24rpx;
  margin-right: 16rpx;
  border-radius: 16rpx;
  font-size: 28rpx;
  color: #888;
  background: #f5f5f5;
}

.category-tab.active {
  color: #fff;
  background: #ff6b6b;
  font-weight: 600;
}

/* 悬浮按钮 */
.floating-btn {
  position: fixed;
  bottom: 120rpx;
  right: 32rpx;
  width: 112rpx;
  height: 112rpx;
  border-radius: 50%;
  background: #ff6b6b;
  color: #fff;
  font-size: 32rpx;
  font-weight: 700;
  box-shadow: 0 12rpx 36rpx rgba(255, 107, 107, 0.3);
  z-index: 999;
}