/**app.wxss - 捷明达产品目录全局样式**/

/* 颜色变量 */
page {
  --primary-color: #1a1a2e;
  --secondary-color: #16213e;
  --accent-color: #0f3460;
  --highlight-color: #e94560;
  --text-color: #333333;
  --text-secondary: #666666;
  --text-light: #999999;
  --bg-color: #f5f5f5;
  --card-bg: #ffffff;
  --border-color: #eeeeee;

  background-color: var(--bg-color);
  color: var(--text-color);
  font-family:
    -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, "Helvetica Neue",
    Arial, sans-serif;
  font-size: 28rpx;
  line-height: 1.5;
}

/* 通用容器 */
.container {
  padding: 24rpx;
}

/* 卡片样式 */
.card {
  background-color: var(--card-bg);
  border-radius: 16rpx;
  padding: 24rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.05);
}

/* 产品卡片 - 横向 */
.product-card {
  display: flex;
  background-color: var(--card-bg);
  border-radius: 16rpx;
  padding: 20rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.05);
}

.product-card .product-image {
  width: 160rpx;
  height: 160rpx;
  border-radius: 12rpx;
  background-color: #f0f0f0;
  flex-shrink: 0;
}

.product-card .product-info {
  flex: 1;
  margin-left: 20rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  overflow: hidden;
}

.product-card .product-name {
  font-size: 28rpx;
  font-weight: 500;
  color: var(--text-color);
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
  line-height: 1.4;
}

.product-card .product-spec {
  font-size: 24rpx;
  color: var(--text-secondary);
  margin-top: 6rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.product-card .product-meta {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-top: 10rpx;
}

.product-card .product-brand {
  font-size: 22rpx;
  color: var(--text-light);
  background-color: var(--bg-color);
  padding: 4rpx 12rpx;
  border-radius: 6rpx;
  max-width: 300rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.product-card .product-price {
  font-size: 30rpx;
  font-weight: 600;
  color: var(--highlight-color);
}

/* 产品卡片 - 网格模式 */
.product-grid-card {
  background-color: var(--card-bg);
  border-radius: 16rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.05);
}

.product-grid-card .grid-image {
  width: 100%;
  height: 220rpx;
  background-color: #f0f0f0;
}

.product-grid-card .grid-info {
  padding: 16rpx;
}

.product-grid-card .grid-name {
  font-size: 26rpx;
  font-weight: 500;
  color: var(--text-color);
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
  line-height: 1.3;
  height: 68rpx;
}

.product-grid-card .grid-spec {
  font-size: 22rpx;
  color: var(--text-secondary);
  margin-top: 6rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.product-grid-card .grid-brand {
  font-size: 20rpx;
  color: var(--text-light);
  margin-top: 6rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

/* 搜索框 */
.search-bar {
  display: flex;
  align-items: center;
  background-color: var(--card-bg);
  border-radius: 40rpx;
  padding: 16rpx 24rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.04);
}

.search-bar .search-icon-text {
  font-size: 28rpx;
  color: #ccc;
  margin-right: 12rpx;
}

.search-bar input {
  flex: 1;
  font-size: 28rpx;
}

/* 加载状态 */
.loading {
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 60rpx;
  color: var(--text-light);
  font-size: 26rpx;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 120rpx 40rpx;
  color: var(--text-light);
}

.empty-state .empty-icon-text {
  font-size: 80rpx;
  margin-bottom: 24rpx;
  opacity: 0.3;
}

.empty-state .empty-text {
  font-size: 28rpx;
}

/* 按钮样式 */
.btn-primary {
  background-color: var(--primary-color);
  color: #ffffff;
  border-radius: 40rpx;
  padding: 20rpx 40rpx;
  font-size: 28rpx;
  text-align: center;
}

.btn-primary:active {
  opacity: 0.8;
}

/* 分割线 */
.divider {
  height: 1rpx;
  background-color: var(--border-color);
  margin: 24rpx 0;
}

/* 徽章 */
.badge {
  display: inline-block;
  padding: 4rpx 14rpx;
  background-color: var(--bg-color);
  color: var(--text-light);
  border-radius: 20rpx;
  font-size: 20rpx;
}

/* 网格布局 */
.grid {
  display: flex;
  flex-wrap: wrap;
  margin: 0 -10rpx;
}

.grid-item {
  width: 50%;
  padding: 10rpx;
  box-sizing: border-box;
}
