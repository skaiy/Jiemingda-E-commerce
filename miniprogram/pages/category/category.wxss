/* pages/category/category.wxss */

.container {
  padding-bottom: 32rpx;
}

/* 统计信息卡片 */
.statistics-card {
  background: linear-gradient(135deg, #ff6b6b, #ff5252);
  margin: 16rpx;
  padding: 32rpx;
  border-radius: 24rpx;
  color: #fff;
  box-shadow: 0 12rpx 36rpx rgba(255, 107, 107, 0.3);
  display: flex;
  align-items: center;
  justify-content: space-around;
}

.stat-item {
  text-align: center;
  flex: 1;
}

.stat-number {
  font-size: 48rpx;
  font-weight: 700;
  line-height: 1;
  margin-bottom: 8rpx;
}

.stat-label {
  font-size: 24rpx;
  opacity: 0.9;
}

.stat-divider {
  width: 2rpx;
  height: 60rpx;
  background: rgba(255, 255, 255, 0.3);
}

/* 分类列表 */
.category-list {
  margin: 16rpx;
}

.category-item {
  background: #fff;
  border-radius: 24rpx;
  padding: 24rpx;
  margin-bottom: 16rpx;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.08);
  display: flex;
  align-items: center;
  position: relative;
  overflow: hidden;
  transition: all 0.3s ease;
}

.category-item:active {
  transform: scale(0.98);
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.12);
}

.category-item:last-child {
  margin-bottom: 0;
}

/* 分类小Banner */
.category-banner-mini {
  width: 80rpx;
  height: 80rpx;
  border-radius: 16rpx;
  background: linear-gradient(135deg, #6ea2ff 0%, #46d9a6 100%);
  background-size: cover;
  background-position: center;
  margin-right: 20rpx;
  position: relative;
  overflow: hidden;
  flex-shrink: 0;
}

.category-overlay {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: linear-gradient(180deg, transparent, rgba(0, 0, 0, 0.1));
}

/* 分类信息 */
.category-info {
  flex: 1;
  min-width: 0;
}

.category-name {
  font-size: 32rpx;
  font-weight: 600;
  color: #222;
  line-height: 1.3;
  margin-bottom: 6rpx;
}

.category-description {
  font-size: 24rpx;
  color: #888;
  line-height: 1.3;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

/* 分类数量 */
.category-count {
  background: #f8f9fa;
  color: #666;
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
  font-size: 24rpx;
  font-weight: 600;
  margin: 0 16rpx;
  flex-shrink: 0;
}

/* 箭头 */
.category-arrow {
  font-size: 32rpx;
  color: #ccc;
  font-weight: 300;
  flex-shrink: 0;
}

/* 快速导航 */
.quick-nav {
  margin: 32rpx 16rpx 0;
  background: #fff;
  border-radius: 24rpx;
  padding: 32rpx;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.08);
}

.quick-nav-title {
  font-size: 36rpx;
  font-weight: 700;
  color: #222;
  margin-bottom: 24rpx;
  text-align: center;
}

.quick-nav-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 16rpx;
}

.quick-nav-item {
  background: linear-gradient(135deg, #f8f9fa, #e9ecef);
  border-radius: 20rpx;
  padding: 24rpx;
  text-align: center;
  transition: all 0.3s ease;
  border: 2rpx solid transparent;
}

.quick-nav-item:active {
  transform: scale(0.95);
  border-color: #ff6b6b;
  background: linear-gradient(135deg, #fff, #f8f9fa);
}

.quick-nav-icon {
  font-size: 48rpx;
  margin-bottom: 12rpx;
  line-height: 1;
}

.quick-nav-label {
  font-size: 24rpx;
  color: #666;
  font-weight: 600;
  line-height: 1.2;
}

/* 状态样式 */
.loading-state, .empty-state {
  padding: 120rpx 40rpx;
  text-align: center;
  color: #999;
  font-size: 28rpx;
}

.loading-state text::after {
  content: "...";
  animation: loading 2s infinite;
}

@keyframes loading {
  0%, 20% { content: "."; }
  40% { content: ".."; }
  60%, 100% { content: "..."; }
}

/* 搜索框样式 */
.search-box {
  margin: 16rpx;
  margin-bottom: 8rpx;
}

.search-input {
  background: #fff;
  border: 2rpx solid #e9ecef;
  border-radius: 16rpx;
  padding: 16rpx;
  font-size: 28rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
  transition: all 0.3s ease;
}

.search-input:focus {
  border-color: #ff6b6b;
  box-shadow: 0 4rpx 12rpx rgba(255, 107, 107, 0.15);
}

/* 响应式调整 */
@media (min-width: 750rpx) {
  .quick-nav-grid {
    grid-template-columns: repeat(4, 1fr);
  }
}

/* 动画效果 */
.category-item {
  animation: slideInUp 0.5s ease-out;
}

.category-item:nth-child(1) { animation-delay: 0.1s; }
.category-item:nth-child(2) { animation-delay: 0.2s; }
.category-item:nth-child(3) { animation-delay: 0.3s; }
.category-item:nth-child(4) { animation-delay: 0.4s; }
.category-item:nth-child(5) { animation-delay: 0.5s; }

@keyframes slideInUp {
  from {
    transform: translateY(40rpx);
    opacity: 0;
  }
  to {
    transform: translateY(0);
    opacity: 1;
  }
}

.statistics-card {
  animation: slideInDown 0.5s ease-out;
}

@keyframes slideInDown {
  from {
    transform: translateY(-40rpx);
    opacity: 0;
  }
  to {
    transform: translateY(0);
    opacity: 1;
  }
}

/* 特殊样式：全部产品项目 */
.category-item:first-child {
  background: linear-gradient(135deg, rgba(255, 107, 107, 0.1), rgba(255, 82, 82, 0.05));
  border: 2rpx solid rgba(255, 107, 107, 0.2);
}

.category-item:first-child .category-count {
  background: #ff6b6b;
  color: #fff;
}

.category-item:first-child .category-name {
  color: #ff6b6b;
}