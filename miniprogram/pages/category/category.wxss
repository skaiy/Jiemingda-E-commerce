/* pages/category/category.wxss - 分类浏览页样式 */

.page {
  height: 100vh;
  overflow: hidden;
}

.layout {
  display: flex;
  height: 100%;
}

/* 左侧分类导航 */
.sidebar {
  width: 180rpx;
  flex-shrink: 0;
  background: #fafafa;
  border-right: 1rpx solid #eee;
  height: 100%;
}

.sidebar-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 24rpx 12rpx;
  border-bottom: 1rpx solid #f0f0f0;
  position: relative;
}

.sidebar-item.active {
  background: #fff;
  font-weight: 600;
}

.sidebar-item.active::before {
  content: '';
  position: absolute;
  left: 0;
  top: 16rpx;
  bottom: 16rpx;
  width: 6rpx;
  background: var(--highlight-color);
  border-radius: 0 6rpx 6rpx 0;
}

.sidebar-name {
  font-size: 24rpx;
  color: #333;
  text-align: center;
  line-height: 1.3;
  word-break: break-all;
}

.sidebar-item.active .sidebar-name {
  color: var(--highlight-color);
}

.sidebar-count {
  font-size: 20rpx;
  color: #bbb;
  margin-top: 6rpx;
}

/* 右侧内容区 */
.content {
  flex: 1;
  height: 100%;
  background: var(--bg-color);
}

.content-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 24rpx;
  background: #fff;
  border-bottom: 1rpx solid #eee;
  position: sticky;
  top: 0;
  z-index: 10;
}

.content-title {
  font-size: 30rpx;
  font-weight: 600;
  color: #333;
}

.content-count {
  font-size: 24rpx;
  color: #999;
}

/* 产品网格 */
.product-grid {
  display: flex;
  flex-wrap: wrap;
  padding: 12rpx;
}

.grid-card {
  width: 50%;
  padding: 8rpx;
  box-sizing: border-box;
}

.grid-card:active {
  opacity: 0.85;
}

.grid-image-wrap {
  width: 100%;
  height: 220rpx;
  border-radius: 12rpx 12rpx 0 0;
  overflow: hidden;
  background: #f5f5f5;
}

.grid-image {
  width: 100%;
  height: 100%;
}

.grid-image-placeholder {
  width: 100%;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  background: linear-gradient(135deg, #f0f0f0, #e8e8e8);
}

.placeholder-icon {
  font-size: 56rpx;
  opacity: 0.35;
}

.grid-info {
  background: #fff;
  padding: 16rpx;
  border-radius: 0 0 12rpx 12rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.04);
}

.grid-name {
  font-size: 24rpx;
  font-weight: 500;
  color: #333;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
  line-height: 1.3;
  height: 64rpx;
}

.grid-spec {
  font-size: 22rpx;
  color: #888;
  margin-top: 6rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  display: block;
}

.grid-brand {
  font-size: 20rpx;
  color: #bbb;
  margin-top: 6rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  display: block;
}
