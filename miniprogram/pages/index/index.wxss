/* pages/index/index.wxss - 首页样式 */

.search-bar {
  display: flex;
  align-items: center;
  background-color: #ffffff;
  border-radius: 40rpx;
  padding: 20rpx 28rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.05);
}

.search-icon {
  width: 32rpx;
  height: 32rpx;
  margin-right: 16rpx;
  opacity: 0.5;
}

.search-placeholder {
  color: #999999;
  font-size: 28rpx;
}

/* 分类横向滚动 */
.category-scroll {
  white-space: nowrap;
  margin-bottom: 24rpx;
}

.category-list {
  display: inline-flex;
  padding: 8rpx 0;
}

.category-item {
  display: inline-block;
  padding: 16rpx 28rpx;
  background-color: #ffffff;
  border-radius: 32rpx;
  margin-right: 16rpx;
  font-size: 26rpx;
  color: #666666;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
  transition: all 0.2s;
}

.category-item.active {
  background-color: #1a1a2e;
  color: #ffffff;
}

/* 产品列表 */
.product-list {
  margin-top: 16rpx;
}

/* 加载更多 */
.load-more {
  text-align: center;
  padding: 32rpx;
  color: #999999;
  font-size: 26rpx;
}

.load-more text:active {
  opacity: 0.7;
}
