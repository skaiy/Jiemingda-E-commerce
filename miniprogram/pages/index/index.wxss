/* pages/index/index.wxss */

.container {
  min-height: 100vh;
}

/* 分类导航样式优化 */
.category-nav {
  background: #fff;
  border-bottom: 1rpx solid #eee;
  padding: 16rpx 0;
  margin-bottom: 16rpx;
  position: sticky;
  top: 0;
  z-index: 100;
}

.category-scroll {
  white-space: nowrap;
  padding: 0 16rpx;
}

.category-tab {
  display: inline-block;
  padding: 16rpx 24rpx;
  margin-right: 16rpx;
  border-radius: 32rpx;
  font-size: 24rpx;
  color: #888;
  background: #f5f5f5;
  transition: all 0.3s ease;
}

.category-tab.active {
  color: #fff;
  background: #ff6b6b;
  font-weight: 600;
  transform: scale(1.05);
}

.category-tab:last-child {
  margin-right: 0;
}

/* Banner样式 */
.category-banner {
  position: relative;
  width: calc(100% - 32rpx);
  height: 180rpx;
  border-radius: 24rpx;
  background: linear-gradient(135deg, #6ea2ff 0%, #46d9a6 100%);
  margin: 0 16rpx 24rpx;
  overflow: hidden;
}

.banner-image {
  border-radius: 24rpx;
}

.banner-title {
  position: absolute;
  left: 32rpx;
  top: 24rpx;
  color: #fff;
  font-size: 36rpx;
  font-weight: 700;
  text-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.4);
  z-index: 2;
}

/* 产品网格优化 */
.product-grid {
  padding: 0 16rpx;
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

/* 产品卡片样式 */
.product-card {
  background: #fff;
  border-radius: 24rpx;
  padding: 20rpx;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.06);
  transition: all 0.3s ease;
}

.product-card:active {
  transform: scale(0.98);
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}

.product-image {
  width: 100%;
  height: 220rpx;
  border-radius: 16rpx;
  background: linear-gradient(180deg, #f0f0f0, #e0e0e0);
}

.product-name {
  font-size: 32rpx;
  font-weight: 600;
  line-height: 1.4;
  margin-top: 16rpx;
  color: #222;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  min-height: 88rpx;
}

.product-brand {
  font-size: 26rpx;
  color: #666;
  margin-top: 12rpx;
  line-height: 1.3;
}

.product-code {
  font-size: 24rpx;
  color: #999;
  margin-top: 8rpx;
  line-height: 1.3;
  font-family: 'Courier New', monospace;
}

.product-spec {
  font-size: 24rpx;
  color: #888;
  margin-top: 8rpx;
  line-height: 1.3;
}

.product-price {
  font-size: 36rpx;
  font-weight: 700;
  color: #ff6b6b;
  margin-top: 16rpx;
  margin-bottom: 8rpx;
}

/* 按钮样式优化 */
.btn {
  border: none;
  outline: none;
  transition: all 0.3s ease;
}

.btn-primary {
  background: linear-gradient(135deg, #ff6b6b, #ff5252);
  box-shadow: 0 8rpx 24rpx rgba(255, 107, 107, 0.3);
}

.btn-primary:active {
  transform: scale(0.95);
  box-shadow: 0 4rpx 12rpx rgba(255, 107, 107, 0.4);
}

.btn-block {
  margin-top: 20rpx;
  padding: 16rpx;
  font-size: 28rpx;
}

/* 响应式布局 */
@media (min-width: 750rpx) {
  .product-grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 16rpx;
  }
}

@media (min-width: 1200rpx) {
  .product-grid {
    grid-template-columns: repeat(3, 1fr);
  }
}

/* 状态样式 */
.loading-state, .empty-state {
  padding: 120rpx 40rpx;
  text-align: center;
  color: #999;
  font-size: 28rpx;
}

.loading-state text::after {
  content: "...";
  animation: loading 2s infinite;
}

@keyframes loading {
  0%, 20% { content: "."; }
  40% { content: ".."; }
  60%, 100% { content: "..."; }
}

/* 悬浮按钮优化 */
.floating-btn {
  position: fixed;
  bottom: 140rpx;
  right: 32rpx;
  width: 96rpx;
  height: 96rpx;
  border-radius: 50%;
  background: linear-gradient(135deg, #ff6b6b, #ff5252);
  color: #fff;
  font-size: 32rpx;
  font-weight: 700;
  box-shadow: 0 12rpx 36rpx rgba(255, 107, 107, 0.4);
  z-index: 999;
  transition: all 0.3s ease;
}

.floating-btn:active {
  transform: scale(0.9);
  box-shadow: 0 8rpx 24rpx rgba(255, 107, 107, 0.5);
}

/* 搜索框样式优化 */
.search-box {
  margin: 16rpx;
  margin-bottom: 8rpx;
}

.search-input {
  background: #f8f9fa;
  border: 2rpx solid #e9ecef;
  transition: all 0.3s ease;
}

.search-input:focus {
  border-color: #ff6b6b;
  background: #fff;
}