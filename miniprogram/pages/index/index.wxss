/* pages/index/index.wxss - 首页样式 */

.page {
  min-height: 100vh;
  background: var(--bg-color);
}

/* 搜索入口 */
.search-entry {
  padding: 16rpx 24rpx;
  background: #fff;
  position: sticky;
  top: 0;
  z-index: 100;
}

.search-entry-inner {
  display: flex;
  align-items: center;
  background: #f5f5f5;
  border-radius: 40rpx;
  padding: 16rpx 24rpx;
}

.search-icon {
  font-size: 28rpx;
  margin-right: 12rpx;
}

.search-placeholder {
  font-size: 26rpx;
  color: #bbb;
}

/* 分类横向滚动 */
.category-scroll {
  background: #fff;
  padding: 0 0 16rpx 0;
  white-space: nowrap;
  border-bottom: 1rpx solid #eee;
}

.category-tabs {
  display: inline-flex;
  padding: 8rpx 16rpx;
  gap: 16rpx;
}

.category-tab {
  display: inline-flex;
  align-items: center;
  gap: 6rpx;
  padding: 12rpx 24rpx;
  border-radius: 32rpx;
  background: #f5f5f5;
  font-size: 24rpx;
  color: #666;
  white-space: nowrap;
  flex-shrink: 0;
}

.category-tab.active {
  background: var(--highlight-color);
  color: #fff;
  font-weight: 600;
}

.tab-count {
  font-size: 20rpx;
  opacity: 0.7;
}

/* 产品列表 */
.product-list {
  padding: 16rpx;
}

.product-card {
  display: flex;
  background: #fff;
  border-radius: 16rpx;
  padding: 20rpx;
  margin-bottom: 16rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.04);
}

.product-card:active {
  opacity: 0.85;
  transform: scale(0.99);
}

/* 产品图片 */
.card-image-wrap {
  width: 160rpx;
  height: 160rpx;
  flex-shrink: 0;
  border-radius: 12rpx;
  overflow: hidden;
  background: #f5f5f5;
}

.card-image {
  width: 100%;
  height: 100%;
}

.card-image-placeholder {
  width: 100%;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  background: linear-gradient(135deg, #f0f0f0, #e8e8e8);
}

.placeholder-icon {
  font-size: 56rpx;
  opacity: 0.4;
}

/* 产品信息 */
.card-info {
  flex: 1;
  margin-left: 20rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  overflow: hidden;
  min-height: 160rpx;
}

.card-name {
  font-size: 28rpx;
  font-weight: 500;
  color: #333;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
  line-height: 1.4;
}

.card-spec {
  font-size: 24rpx;
  color: #888;
  margin-top: 8rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.card-meta {
  display: flex;
  align-items: center;
  gap: 12rpx;
  margin-top: 12rpx;
}

.card-brand {
  font-size: 22rpx;
  color: #999;
  background: #f5f5f5;
  padding: 4rpx 14rpx;
  border-radius: 8rpx;
  max-width: 260rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.card-category {
  font-size: 22rpx;
  color: var(--highlight-color);
  background: rgba(233, 69, 96, 0.08);
  padding: 4rpx 14rpx;
  border-radius: 8rpx;
}

/* 加载状态 */
.loading {
  text-align: center;
  padding: 40rpx;
  color: #999;
  font-size: 26rpx;
}

.load-end {
  text-align: center;
  padding: 40rpx;
  color: #ccc;
  font-size: 24rpx;
}
