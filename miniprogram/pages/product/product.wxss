/* pages/product/product.wxss - 产品详情页样式 */

.product-gallery {
  background-color: #ffffff;
  padding: 40rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.product-main-image {
  width: 100%;
  height: 500rpx;
}

.product-header {
  background-color: #ffffff;
  padding: 32rpx;
  margin-top: 20rpx;
}

.product-name {
  display: block;
  font-size: 36rpx;
  font-weight: 600;
  color: #333333;
  line-height: 1.4;
}

.product-code {
  display: block;
  font-size: 24rpx;
  color: #999999;
  margin-top: 12rpx;
}

.price-section {
  background-color: #fff8f0;
  padding: 24rpx 32rpx;
  display: flex;
  align-items: baseline;
  margin-top: 2rpx;
}

.price-label {
  font-size: 26rpx;
  color: #666666;
  margin-right: 16rpx;
}

.price-value {
  font-size: 44rpx;
  font-weight: 600;
  color: #e94560;
}

.price-unit {
  font-size: 24rpx;
  color: #999999;
  margin-left: 8rpx;
}

.info-card {
  background-color: #ffffff;
  margin-top: 20rpx;
  padding: 32rpx;
}

.info-title {
  font-size: 30rpx;
  font-weight: 600;
  color: #333333;
  margin-bottom: 24rpx;
  padding-bottom: 16rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.info-item {
  display: flex;
  justify-content: space-between;
  padding: 16rpx 0;
  border-bottom: 1rpx solid #f8f8f8;
}

.info-item:last-child {
  border-bottom: none;
}

.info-label {
  font-size: 28rpx;
  color: #666666;
}

.info-value {
  font-size: 28rpx;
  color: #333333;
  text-align: right;
  flex: 1;
  margin-left: 32rpx;
}

.description-text {
  font-size: 28rpx;
  color: #666666;
  line-height: 1.6;
}

.action-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  display: flex;
  padding: 20rpx 32rpx;
  padding-bottom: calc(20rpx + env(safe-area-inset-bottom));
  background-color: #ffffff;
  box-shadow: 0 -4rpx 16rpx rgba(0, 0, 0, 0.05);
  z-index: 100;
}

.action-bar button {
  flex: 1;
  margin: 0 10rpx;
  border-radius: 40rpx;
  font-size: 30rpx;
  height: 88rpx;
  line-height: 88rpx;
}

.btn-contact {
  background-color: #1a1a2e;
  color: #ffffff;
}

.btn-share {
  background-color: #f5f5f5;
  color: #333333;
}

.loading-container {
  min-height: 100vh;
  display: flex;
  justify-content: center;
  align-items: center;
}

/* 底部安全区域占位 */
.container {
  padding-bottom: 150rpx;
}
