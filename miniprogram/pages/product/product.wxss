/* pages/product/product.wxss - 产品详情页样式 */

.page {
  background: var(--bg-color);
  padding-bottom: 40rpx;
}

/* 顶部图片 */
.hero-section {
  width: 100%;
  height: 500rpx;
  background: #fff;
}

.hero-image {
  width: 100%;
  height: 100%;
}

.hero-placeholder {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  background: linear-gradient(135deg, #f8f8f8, #e8e8e8);
}

.hero-icon {
  font-size: 100rpx;
  opacity: 0.3;
}

.hero-text {
  font-size: 28rpx;
  color: #ccc;
  margin-top: 16rpx;
}

/* 基本信息 */
.info-section {
  background: #fff;
  padding: 28rpx 32rpx;
  margin-top: 2rpx;
}

.product-name {
  font-size: 34rpx;
  font-weight: 600;
  color: #222;
  line-height: 1.4;
  display: block;
}

.tag-row {
  display: flex;
  gap: 12rpx;
  margin-top: 16rpx;
  flex-wrap: wrap;
}

.tag {
  font-size: 22rpx;
  padding: 6rpx 16rpx;
  border-radius: 8rpx;
}

.tag-category {
  color: var(--highlight-color);
  background: rgba(233, 69, 96, 0.08);
}

.tag-brand {
  color: #1a73e8;
  background: rgba(26, 115, 232, 0.08);
}

/* 详情卡片 */
.detail-card {
  background: #fff;
  margin-top: 16rpx;
  padding: 8rpx 32rpx;
}

.detail-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 24rpx 0;
  border-bottom: 1rpx solid #f5f5f5;
}

.detail-row:last-child {
  border-bottom: none;
}

.detail-label {
  font-size: 28rpx;
  color: #999;
  flex-shrink: 0;
  width: 140rpx;
}

.detail-value {
  font-size: 28rpx;
  color: #333;
  text-align: right;
  flex: 1;
  overflow: hidden;
  text-overflow: ellipsis;
}

.code-value {
  display: flex;
  align-items: center;
  justify-content: flex-end;
  gap: 12rpx;
}

.copy-hint {
  font-size: 20rpx;
  color: #1a73e8;
  flex-shrink: 0;
}

.price-value {
  color: var(--highlight-color);
  font-weight: 600;
}

/* 操作按钮 */
.action-bar {
  display: flex;
  gap: 16rpx;
  padding: 24rpx 32rpx;
  margin-top: 16rpx;
}

.action-btn {
  flex: 1;
  padding: 20rpx 0;
  border-radius: 40rpx;
  font-size: 28rpx;
  text-align: center;
  border: none;
  line-height: 1.5;
}

.action-btn::after {
  border: none;
}

.share-btn {
  background: var(--primary-color);
  color: #fff;
}

.contact-btn {
  background: #f5f5f5;
  color: #333;
}

/* 同类推荐 */
.related-section {
  margin-top: 16rpx;
  background: #fff;
  padding: 28rpx 0 28rpx 32rpx;
}

.section-title {
  font-size: 30rpx;
  font-weight: 600;
  color: #333;
  display: block;
  margin-bottom: 20rpx;
}

.related-scroll {
  white-space: nowrap;
}

.related-list {
  display: inline-flex;
  gap: 16rpx;
  padding-right: 32rpx;
}

.related-card {
  width: 200rpx;
  flex-shrink: 0;
  display: inline-block;
  vertical-align: top;
  white-space: normal;
}

.related-card:active {
  opacity: 0.8;
}

.related-image-wrap {
  width: 200rpx;
  height: 200rpx;
  border-radius: 12rpx;
  overflow: hidden;
  background: #f5f5f5;
}

.related-image {
  width: 100%;
  height: 100%;
}

.related-placeholder {
  width: 100%;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  background: linear-gradient(135deg, #f0f0f0, #e8e8e8);
  font-size: 48rpx;
  opacity: 0.35;
}

.related-name {
  font-size: 24rpx;
  color: #333;
  margin-top: 10rpx;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
  line-height: 1.3;
}

.related-spec {
  font-size: 20rpx;
  color: #999;
  margin-top: 4rpx;
  display: block;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
