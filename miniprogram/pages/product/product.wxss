/* pages/product/product.wxss */

.container {
  padding-bottom: 32rpx;
}

/* 产品图片容器 */
.product-image-container {
  width: 100%;
  height: 500rpx;
  background: #fff;
  display: flex;
  align-items: center;
  justify-content: center;
  border-bottom: 1rpx solid #eee;
}

.product-image {
  width: 100%;
  height: 100%;
  background: linear-gradient(180deg, #f0f0f0, #e0e0e0);
}

/* 产品信息卡片 */
.product-info-card {
  background: #fff;
  margin: 16rpx;
  padding: 32rpx;
  border-radius: 24rpx;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.08);
}

.product-title {
  font-size: 44rpx;
  font-weight: 700;
  line-height: 1.3;
  color: #222;
  margin-bottom: 16rpx;
}

.product-price {
  font-size: 48rpx;
  font-weight: 700;
  color: #ff6b6b;
  margin-bottom: 32rpx;
}

/* 产品详情 */
.product-details {
  border-top: 1rpx solid #f0f0f0;
  padding-top: 24rpx;
  margin-bottom: 24rpx;
}

.detail-item {
  display: flex;
  align-items: flex-start;
  margin-bottom: 16rpx;
  line-height: 1.5;
}

.detail-item:last-child {
  margin-bottom: 0;
}

.detail-label {
  font-size: 28rpx;
  color: #666;
  font-weight: 600;
  min-width: 140rpx;
  flex-shrink: 0;
}

.detail-value {
  font-size: 28rpx;
  color: #333;
  flex: 1;
  word-break: break-all;
}

/* 产品描述 */
.product-description {
  border-top: 1rpx solid #f0f0f0;
  padding-top: 24rpx;
}

.description-text {
  font-size: 28rpx;
  color: #555;
  line-height: 1.6;
  margin-top: 12rpx;
  white-space: pre-line;
}

/* 操作按钮 */
.action-buttons {
  display: flex;
  gap: 16rpx;
  padding: 0 16rpx;
  margin-top: 24rpx;
}

.btn-share {
  flex: 1;
  background: #f8f9fa;
  color: #666;
  border: 2rpx solid #e9ecef;
}

.btn-contact {
  flex: 2;
}

.btn-secondary:active {
  background: #e9ecef;
  transform: scale(0.98);
}

/* 相关产品推荐 */
.related-section {
  margin: 32rpx 16rpx 0;
  background: #fff;
  border-radius: 24rpx;
  padding: 32rpx;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.08);
}

.section-title {
  font-size: 36rpx;
  font-weight: 700;
  color: #222;
  margin-bottom: 24rpx;
}

.related-scroll {
  white-space: nowrap;
}

.related-item {
  display: inline-block;
  width: 200rpx;
  margin-right: 16rpx;
  vertical-align: top;
}

.related-item:last-child {
  margin-right: 0;
}

.related-image {
  width: 100%;
  height: 160rpx;
  border-radius: 16rpx;
  background: linear-gradient(180deg, #f0f0f0, #e0e0e0);
}

.related-name {
  font-size: 24rpx;
  color: #333;
  margin-top: 12rpx;
  line-height: 1.3;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  white-space: normal;
}

.related-price {
  font-size: 28rpx;
  font-weight: 700;
  color: #ff6b6b;
  margin-top: 8rpx;
}

/* 图片预览遮罩 */
.image-preview-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.9);
  z-index: 9999;
  display: flex;
  align-items: center;
  justify-content: center;
}

.preview-image {
  width: 90%;
  height: 80%;
}

.preview-close {
  position: absolute;
  top: 60rpx;
  right: 40rpx;
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  background: rgba(255, 255, 255, 0.2);
  color: #fff;
  font-size: 48rpx;
  font-weight: 300;
  display: flex;
  align-items: center;
  justify-content: center;
  backdrop-filter: blur(10rpx);
}

/* 状态样式 */
.loading-state, .error-state {
  padding: 120rpx 40rpx;
  text-align: center;
  color: #999;
  font-size: 28rpx;
}

.error-state {
  color: #ff6b6b;
}

.error-state .btn {
  margin-top: 32rpx;
  width: 200rpx;
}

/* 动画效果 */
.product-info-card {
  animation: slideUp 0.5s ease-out;
}

@keyframes slideUp {
  from {
    transform: translateY(40rpx);
    opacity: 0;
  }
  to {
    transform: translateY(0);
    opacity: 1;
  }
}

.related-item {
  transition: transform 0.3s ease;
}

.related-item:active {
  transform: scale(0.95);
}

/* 响应式调整 */
@media (max-width: 600rpx) {
  .product-title {
    font-size: 40rpx;
  }
  
  .product-price {
    font-size: 44rpx;
  }
  
  .action-buttons {
    flex-direction: column;
  }
  
  .btn-share, .btn-contact {
    flex: none;
  }
}