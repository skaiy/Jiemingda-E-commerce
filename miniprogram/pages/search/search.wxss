/* pages/search/search.wxss - 搜索页样式 */

.page {
  min-height: 100vh;
  background: var(--bg-color);
}

/* 搜索栏 */
.search-bar-wrap {
  padding: 16rpx 24rpx;
  background: #fff;
  position: sticky;
  top: 0;
  z-index: 100;
  border-bottom: 1rpx solid #eee;
}

.search-bar {
  display: flex;
  align-items: center;
  background: #f5f5f5;
  border-radius: 40rpx;
  padding: 12rpx 24rpx;
}

.search-icon {
  font-size: 28rpx;
  margin-right: 12rpx;
  flex-shrink: 0;
}

.search-input {
  flex: 1;
  font-size: 28rpx;
  height: 48rpx;
}

.clear-btn {
  font-size: 28rpx;
  color: #999;
  padding: 8rpx 12rpx;
  flex-shrink: 0;
}

/* 热门分类 */
.hot-section {
  padding: 32rpx 24rpx;
}

.section-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 20rpx;
  display: block;
}

.hot-tags {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
}

.hot-tag {
  display: flex;
  align-items: center;
  gap: 8rpx;
  padding: 14rpx 24rpx;
  background: #fff;
  border-radius: 32rpx;
  font-size: 26rpx;
  color: #555;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.04);
}

.hot-tag:active {
  background: #f0f0f0;
}

.hot-count {
  font-size: 20rpx;
  color: #bbb;
}

/* 搜索结果 */
.results-section {
  padding: 0 0 24rpx 0;
}

.results-header {
  padding: 20rpx 24rpx;
}

.results-count {
  font-size: 24rpx;
  color: #999;
}

.result-list {
  padding: 0 16rpx;
}

/* 复用首页产品卡片样式 */
.product-card {
  display: flex;
  background: #fff;
  border-radius: 16rpx;
  padding: 20rpx;
  margin-bottom: 16rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.04);
}

.product-card:active {
  opacity: 0.85;
}

.card-image-wrap {
  width: 140rpx;
  height: 140rpx;
  flex-shrink: 0;
  border-radius: 12rpx;
  overflow: hidden;
  background: #f5f5f5;
}

.card-image {
  width: 100%;
  height: 100%;
}

.card-image-placeholder {
  width: 100%;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  background: linear-gradient(135deg, #f0f0f0, #e8e8e8);
}

.placeholder-icon {
  font-size: 48rpx;
  opacity: 0.35;
}

.card-info {
  flex: 1;
  margin-left: 20rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  overflow: hidden;
}

.card-name {
  font-size: 28rpx;
  font-weight: 500;
  color: #333;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
  line-height: 1.4;
}

.card-spec {
  font-size: 24rpx;
  color: #888;
  margin-top: 6rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.card-meta {
  display: flex;
  align-items: center;
  gap: 12rpx;
  margin-top: 10rpx;
}

.card-brand {
  font-size: 22rpx;
  color: #999;
  background: #f5f5f5;
  padding: 4rpx 14rpx;
  border-radius: 8rpx;
  max-width: 260rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.card-category {
  font-size: 22rpx;
  color: var(--highlight-color);
  background: rgba(233, 69, 96, 0.08);
  padding: 4rpx 14rpx;
  border-radius: 8rpx;
}

/* 空状态 */
.empty-hint {
  font-size: 24rpx;
  color: #ccc;
  margin-top: 8rpx;
}
