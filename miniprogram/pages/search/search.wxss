/* pages/search/search.wxss */
.search-header {
  display: flex;
  align-items: center;
  padding: 20rpx 0;
  margin-bottom: 24rpx;
}

.search-input-wrap {
  flex: 1;
  display: flex;
  align-items: center;
  background-color: #ffffff;
  border-radius: 40rpx;
  padding: 16rpx 24rpx;
}

.search-icon {
  width: 32rpx;
  height: 32rpx;
  margin-right: 16rpx;
  opacity: 0.5;
}

.search-input {
  flex: 1;
  font-size: 28rpx;
}

.clear-icon {
  width: 32rpx;
  height: 32rpx;
  opacity: 0.5;
}

.cancel-btn {
  margin-left: 24rpx;
  font-size: 28rpx;
  color: #666666;
}

.result-count {
  font-size: 24rpx;
  color: #999999;
  margin-bottom: 20rpx;
}
